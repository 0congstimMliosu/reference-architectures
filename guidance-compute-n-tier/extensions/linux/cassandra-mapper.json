{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": { "type": "object" },
    "source": { "type": "object" },
    "context": { "type": "object" }
  },
  "variables": {
    "scriptName": "install-cassandra.sh",
    "refArchPrefix": "ra-ntier-",
    "apacheInstallerUri": "[uri(deployment().properties.templateLink.uri, variables('scriptName'))]",
    "dataCenterName": "[concat(variables('refArchPrefix'), 'dc-', variables('location'))]",
    "location": "[resourceGroup().location]",
    "seedVmName": "[concat(variables('refArchPrefix'), 'data-vm1')]",
    "opsCenterVmName": "[concat(variables('refArchPrefix'), 'mgmt-vm2')]",
    "instance": {
      "settings": {
        "fileUris": [ "[variables('apacheInstallerUri')]" ],
        "commandToExecute": "[concat('sh ', variables('scriptName'), ' ', variables('seedVmName'), ' ', variables('opsCenterVmName'), ' ', variables('dataCenterName'))]"
      },
      "protectedSettings": { }
    }
  },
  "resources": [ ],
  "outputs": {
    "settings": {
      "type": "object",
      "value": "[variables('instance')]"
    }
  }
}