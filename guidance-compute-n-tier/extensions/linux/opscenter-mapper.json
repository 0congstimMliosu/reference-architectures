{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": { "type": "object" },
    "source": { "type": "object" },
    "context": { "type": "object" }
  },
  "variables": {
    "scriptName": "install-opscenter.sh",
    "apacheInstallerUri": "[uri(deployment().properties.templateLink.uri, variables('scriptName'))]",
    "uniqueString": "[uniqueString(resourceGroup().id)]",
    "location": "[resourceGroup().location]",
    "seedVmName": "ra-ntier-data-vm1",
    "instance": {
      "settings": {
        "fileUris": [ "[variables('apacheInstallerUri')]" ],
        "commandToExecute": "[concat('sh ', variables('scriptName'), ' ', variables('location'),' ', variables('uniqueString'), ' ', variables('seedVmName'))]"
      },
      "protectedSettings": { }
    }
  },
  "resources": [ ],
  "outputs": {
    "settings": {
      "type": "object",
      "value": "[variables('instance')]"
    }
  }
}