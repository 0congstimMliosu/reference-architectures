{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": { "type": "object" },
    "source": { "type": "object" },
    "context": { "type": "object" }
  },
  "variables": {
    "apacheInstallerUri": "[uri(deployment().properties.templateLink.uri, 'install-apache.sh')]",
    "instance": {
      "settings": {
        "fileUris": [ "[variables('apacheInstallerUri')]" ],
        "commandToExecute": "sh install-apache.sh"
      },
      "protectedSettings": { }
    }
  },
  "resources": [ ],
  "outputs": {
    "settings": {
      "type": "object",
      "value": "[variables('instance')]"
    }
  }
}